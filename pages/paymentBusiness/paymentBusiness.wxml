    </view>
    <!-- 选项卡 -->
    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar" >
                <block wx:for-items="{{tabs}}" wx:key="{{index}}">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <view class="weui-tab__panel">
              <!-- ************选项一的内容************ -->
                <view class="weui-tab__content" hidden="{{activeIndex != 0}}">

                  <view class='content'>
                    <view class='content_receivables' wx:for="{{All.receivables_list}}" wx:key="{{id}}" data-index='{{index}}'>
                      <view class='content_address' bindtap='next'><text class='f1' >{{item.name}} {{item.tel}}</text><text class='hot r1' >{{item.applyCash}}</text></view>
                      <view class='content_nav'>
                        <view class='content_nav_left'  bindtap='next'  data-num='{{index}}'>
                          <view class='menu'>共{{item.common}}笔</view>
                          <view class='menu'>消费金额：₩ {{item.consumptionAmount}}</view>
                          <view class='menu'>返点率：{{item.returnPoint}}</view>
                          <view class='menu'>已付款：₩ {{item.alreadyPaid}}</view>
                          <view class='menu'>付款时间：{{item.time}}</view>
                          <view class='menu'>付款地址：{{item.address}}</view>
                        </view>
                         <view class='content_nav_right'>
                          <view class='scanning' bindtap='toSweepOrder'>{{item.scavenging}}</view>



                        </view>
                      </view>
                      
                    </view>
                  </view>
                  <view class='total'>
                    <view class='total_title'>共{{All.total.strip}}条记录</view>
                    <view class='total_title'>消费金额总计：₩ {{All.total.money}}</view>
                    <view class='total_title'>预计收款总计：₩ {{All.total.receivables}}</view>
                  </view>
              
                </view>
              <!-- ************选项二的内容************ -->
                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
                
                  <view class='content'>
                    <view class='content_receivables' wx:for="{{All.receivables_list}}" wx:key="{{id}}" data-index='{{index}}'>
