                         <view class='content_nav_right' > 
                           <!-- <view class='card_img' wx:for='{{All.imgArr}}' wx:key="{{index}}">
                            <image class='img' src='{{item}}' data-index='{{index}}' bindtap='previewImg'></image>
                           </view> -->
                           <view class='card_img' >
                            <image mode='aspectFit' class='img' src='{{item.cardImg}}' data-index='{{index}}' bindtap='previewImg'></image>
                           </view>


