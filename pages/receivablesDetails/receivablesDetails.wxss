page {
  width: 750rpx;
  height: 100%;
  background: #EFEFF4;
  position: relative;
}
.header {
  width: 690rpx;
  height: auto;
  padding: 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #888888;
}
.content {
  width: 690rpx;
  height: auto;
  padding: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #E5E5E5;
}
.content_time {
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #222222;
}
.content_nav {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #999999;
}

.total {
  width: 710rpx;
  height: auto;
  padding: 20rpx;
  text-align: right;
  background: #fff;
}
.total_title {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #586C94;
}
.but {
  width: 670rpx;
  height: 94rpx;
  color: #fff;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  position: absolute;
  left: 40rpx;
  top: 200rpx;
  background: #1AAD19;
}
.footer {
  width: 750rpx;
  height: 358rpx;
  position: relative;
}